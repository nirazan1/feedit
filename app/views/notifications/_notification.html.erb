<% if notification.read == false %>
    <div class="alert alert-dismissible alert-success" id="notification_<%= notification.id %>">
        <p> <%= link_to "#{notification.sender.username} sent you a new message" , notification.conversation %>
          <%= link_to notification, method: :delete,remote: true, class: "pull-right" do %>
              <i class="fa fa-lg fa-trash-o"></i>
          <% end %>
        </p>
    </div>
<% else %>
    <div class="alert alert-dismissible alert-warning" id="notification_<%= notification.id %>">
      <p> <%= link_to "#{notification.sender.username} sent you a new message" , notification.conversation, :target => "_blank" %>
        <%= link_to notification, method: :delete, remote: true, class: "pull-right" do %>
            <i class="fa fa-lg fa-trash-o"></i>
        <% end %>
      </p>
    </div>
<% end %>