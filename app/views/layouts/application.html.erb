<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container-fluid">
			<div class="navbar-header">
				<ul class="nav navbar-nav">
				<li class="active"><%= link_to "Blog", feeds_path %></li>
				</ul>
			</div>
			<ul class="nav navbar-nav">
			<li><%= link_to "All Feeds", feeds_path%></li>
			</ul>
			<ul class="nav navbar-nav navbar-right">
				<% if user_signed_in? %>
					<li><%= image_tag(current_user.avatar.url, :class=> "img-circle", size: "50") %></li>
					<li><%= link_to current_user.first_name+" "+current_user.last_name, edit_user_registration_path %></li>
					<% if current_user.admin == true %>
						<li><%= link_to "Manage Blog", rails_admin.dashboard_path %></li>
					<% end %>
					<li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
				<% else %>
					<li><%= link_to "Sign up", new_user_registration_path %></li>
					<li><%= link_to "Sign In", new_user_session_path %></li>
				<% end %>
			<ul>

		</div>
	</div>
	

	

	<div class="container">
		<div class="jumbotron">
		<h1>Feeds</h1>
		<p>All the latest feeds ... </p>
		</div>
		
		<% if notice %>
		  <p class="alert alert-success"><%= notice %></p>
		<% end %>
		<% if alert %>
		  <p class="alert alert-danger"><%= alert %></p>
		<% end %>
	
		<%= yield %>
	</div>	

</body>
</html>
